<table class="contactTable">
    <th>
        <td>Company Name</td>
    </th>

    <th>
        <td>Name</td>
    </th>

    <th>
        <td>Address</td>
    </th>

    <th>
        <td>Industry</td>
    </th>

    <th>
        <td>Phone</td>
    </th>

    <th>
        <td>Website</td>
    </th>

{{#each person in model}}

<tr class="recFrame">

    <td {{bind-attr class="isCompleted:completed isEditing:editing :NrecFrame"}}>
        <p>
        {{#if isEditing}}
            {{input type="text" value=person.company class="edit"}}
            <button>Save</button>
        {{else}}
            <label {{action "editPerson" on="doubleClick"}}></label><button class="destroy"></button>
            {{person.company}}
        {{/if}}</p>
    </td>
    
    <td class="NrecFrame">
        <p>{{person.name}}</p>
    </td>

    <td class="NrecFrame">
        <p>{{person.address}}</p>
    </td>

    <td class="NrecFrame">
        <p>{{person.industry}}</p>
    </td>
    
    <td class="NrecFrame">
        <p>{{person.phone}}</p>
    </td>

    <td class="NrecFrame">
        <p>{{person.website}}</p>
    </td>

</tr>
  
{{/each}}
</table>
